                    </div>

                    <div class="flex items-center mb-4">
                        <input type="checkbox" id="agentIsActive" name="isActive" class="mr-2">
                        <label for="agentIsActive" class="text-sm font-bold">
                            <i class="fas fa-toggle-on mr-1"></i>Activate agent immediately
                        </label>
                    </div>
                </div>

                {# Tools Tab #}
                <div id="tab-tools" class="tab-content">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-xl font-bold mb-4">
                                <i class="fas fa-toolbox mr-2"></i>Available Tools
                            </h3>
                            <div id="availableToolsContainer" style="max-height: 500px; overflow-y: auto;">
                                <div class="text-center py-8 text-gray-500">
                                    <i class="fas fa-spinner fa-spin text-3xl mb-2"></i>
                                    <p>Loading available tools...</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-4">
                                <i class="fas fa-check-square mr-2"></i>Selected Tools
                            </h3>
                            <div id="selectedToolsArea" class="selected-tools-area">
                                <p class="text-gray-500 text-center py-8">
                                    <i class="fas fa-hand-pointer text-3xl mb-2"></i><br>
