{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        let currentAgentId = null;
        let availableTools = {};
        let selectedTools = [];
        let availableToolsSortable = null;
        let selectedToolsSortable = null;

        // Load tools on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadAvailableTools();
        });

        // Load available tools from backend
        async function loadAvailableTools() {
            try {
                const response = await fetch('/admin/agent-configuration/tools');
                const data = await response.json();

                if (data.success) {
                    availableTools = data.tools;
                    renderAvailableTools(data.grouped);
                }
            } catch (error) {
                console.error('Error loading tools:', error);
                document.getElementById('availableToolsContainer').innerHTML =
                    '<div class="text-center py-8 text-red-500"><i class="fas fa-exclamation-circle text-3xl mb-2"></i><p>Failed to load tools</p></div>';
            }
        }

        // Render available tools grouped by category
        function renderAvailableTools(groupedTools) {
            const container = document.getElementById('availableToolsContainer');
            container.innerHTML = '';

            for (const [category, tools] of Object.entries(groupedTools)) {
                const categoryDiv = document.createElement('div');
                categoryDiv.className = 'tool-category';

                const header = document.createElement('div');
                header.className = 'tool-category-header';
                header.innerHTML = `<i class="fas fa-folder mr-2"></i>${category}`;
                categoryDiv.appendChild(header);

                const toolsList = document.createElement('div');
                toolsList.className = 'tools-list';
                toolsList.id = `category-${category.replace(/\s+/g, '-')}`;

                for (const [toolKey, tool] of Object.entries(tools)) {
                    const toolItem = createToolElement(toolKey, tool);
                    toolsList.appendChild(toolItem);
                }

                categoryDiv.appendChild(toolsList);
                container.appendChild(categoryDiv);
            }

            // Initialize SortableJS for available tools
            document.querySelectorAll('.tools-list').forEach(list => {
                new Sortable(list, {
                    group: {
                        name: 'tools',
                        pull: 'clone',
                        put: false
                    },
                    animation: 150,
                    sort: false,
                    ghostClass: 'ghost'
                });
            });

            initializeSelectedToolsSortable();
        }

        // Create tool element
        function createToolElement(toolKey, tool) {
            const toolItem = document.createElement('div');
            toolItem.className = 'tool-item';
            toolItem.dataset.toolKey = toolKey;

            let paramsHtml = '';
            if (tool.parameters) {
                const paramCount = Object.keys(tool.parameters).length;
                paramsHtml = `<span class="text-xs text-gray-500 ml-2">(${paramCount} params)</span>`;
            }

            toolItem.innerHTML = `
                <div class="flex items-start justify-between">
                    <div class="flex-1">
                        <div class="font-bold text-sm">
                            <i class="fas fa-puzzle-piece mr-1"></i>${tool.name}${paramsHtml}
                        </div>
                        <div class="text-xs text-gray-600 mt-1">${tool.description}</div>
                    </div>
                    <i class="fas fa-grip-vertical text-gray-400 ml-2"></i>
                </div>
            `;

            return toolItem;
        }

        // Initialize SortableJS for selected tools area
        function initializeSelectedToolsSortable() {
            const selectedArea = document.getElementById('selectedToolsArea');

            if (selectedToolsSortable) {
                selectedToolsSortable.destroy();
            }

            selectedToolsSortable = new Sortable(selectedArea, {
                group: {
                    name: 'tools',
                    pull: true,
                    put: true
                },
                animation: 150,
                ghostClass: 'ghost',
                onAdd: function(evt) {
                    const toolKey = evt.item.dataset.toolKey;
                    if (!selectedTools.includes(toolKey)) {
                        selectedTools.push(toolKey);
                    }
                    updateSelectedToolsDisplay();
                },
                onRemove: function(evt) {
                    const toolKey = evt.item.dataset.toolKey;
                    selectedTools = selectedTools.filter(t => t !== toolKey);
                    updateSelectedToolsDisplay();
                }
            });
        }

        // Update selected tools display
        function updateSelectedToolsDisplay() {
            const container = document.getElementById('selectedToolsArea');

            if (selectedTools.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-center py-8"><i class="fas fa-hand-pointer text-3xl mb-2"></i><br>Drag tools here to assign them to this agent</p>';
            } else {
                container.innerHTML = '';
                selectedTools.forEach(toolKey => {
                    if (availableTools[toolKey]) {
                        const toolItem = createToolElement(toolKey, availableTools[toolKey]);
                        container.appendChild(toolItem);
                    }
                });
            }
        }

        // Tab switching
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.closest('.tab-btn').classList.add('active');

            // Update tab content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(`tab-${tabName}`).classList.add('active');
        }

        // Open create modal
        function openCreateModal() {
            currentAgentId = null;
            document.getElementById('modalTitle').textContent = 'Create New Agent';
            document.getElementById('agentForm').reset();
            document.getElementById('agentId').value = '';
            document.getElementById('deleteBtn').style.display = 'none';
            selectedTools = [];
            updateSelectedToolsDisplay();
            document.getElementById('agentModal').style.display = 'block';
        }

        // Edit agent
        async function editAgent(agentId) {
            currentAgentId = agentId;
            document.getElementById('modalTitle').textContent = 'Edit Agent';
            document.getElementById('deleteBtn').style.display = 'inline-block';

            try {
                const response = await fetch(`/admin/agent-configuration/${agentId}`);
                const agent = await response.json();

                // Populate form fields
                document.getElementById('agentId').value = agent.id;
                document.getElementById('agentName').value = agent.name || '';
                document.getElementById('agentSlug').value = agent.slug || '';
                document.getElementById('agentDescription').value = agent.description || '';
                document.getElementById('agentType').value = agent.type || 'custom';
                document.getElementById('agentModel').value = agent.model || 'gpt-4';
                document.getElementById('agentSystemPrompt').value = agent.systemPrompt || '';
                document.getElementById('agentIsActive').checked = agent.isActive || false;
                document.getElementById('agentTemperature').value = agent.temperature || 0.7;
                document.getElementById('agentMaxTokens').value = agent.maxTokens || 2000;
                document.getElementById('agentPriority').value = agent.priority || 50;
                document.getElementById('agentTriggerEvent').value = agent.triggerEvent || '';

                // Handle JSON fields
                if (agent.workflow) {
                    document.getElementById('agentWorkflow').value =
                        typeof agent.workflow === 'string' ? agent.workflow : JSON.stringify(agent.workflow, null, 2);
                }
                if (agent.configuration) {
                    document.getElementById('agentConfiguration').value =
                        typeof agent.configuration === 'string' ? agent.configuration : JSON.stringify(agent.configuration, null, 2);
                }
                if (agent.triggerConditions) {
                    document.getElementById('agentTriggerConditions').value =
                        typeof agent.triggerConditions === 'string' ? agent.triggerConditions : JSON.stringify(agent.triggerConditions, null, 2);
                }

                // Handle tools
                selectedTools = agent.tools || [];
                updateSelectedToolsDisplay();

                document.getElementById('agentModal').style.display = 'block';
            } catch (error) {
                console.error('Error loading agent:', error);
                alert('Failed to load agent data');
            }
        }

        // Close modal
        function closeModal() {
            document.getElementById('agentModal').style.display = 'none';
        }

        // Form submission
        document.getElementById('agentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = {
                name: document.getElementById('agentName').value,
                slug: document.getElementById('agentSlug').value,
                description: document.getElementById('agentDescription').value,
                type: document.getElementById('agentType').value,
                model: document.getElementById('agentModel').value,
                systemPrompt: document.getElementById('agentSystemPrompt').value,
                isActive: document.getElementById('agentIsActive').checked,
                temperature: parseFloat(document.getElementById('agentTemperature').value),
                maxTokens: parseInt(document.getElementById('agentMaxTokens').value),
                priority: parseInt(document.getElementById('agentPriority').value),
                triggerEvent: document.getElementById('agentTriggerEvent').value,
                tools: selectedTools
            };

            // Parse JSON fields
            try {
                const workflow = document.getElementById('agentWorkflow').value.trim();
                if (workflow) formData.workflow = JSON.parse(workflow);

                const configuration = document.getElementById('agentConfiguration').value.trim();
                if (configuration) formData.configuration = JSON.parse(configuration);

                const triggerConditions = document.getElementById('agentTriggerConditions').value.trim();
                if (triggerConditions) formData.triggerConditions = JSON.parse(triggerConditions);
            } catch (error) {
                alert('Invalid JSON format in one of the fields. Please check your input.');
                return;
            }

            try {
                const agentId = document.getElementById('agentId').value;
                const url = agentId
                    ? `/admin/agent-configuration/${agentId}/update`
                    : '/admin/agent-configuration/create';

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    closeModal();
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error saving agent:', error);
                alert('Failed to save agent');
            }
        });

        // Toggle agent status
        async function toggleAgent(agentId) {
            if (!confirm('Are you sure you want to toggle this agent\'s status?')) {
                return;
            }

            try {
                const response = await fetch(`/admin/agent-configuration/${agentId}/toggle`, {
                    method: 'POST'
                });
                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error toggling agent:', error);
                alert('Failed to toggle agent status');
            }
        }

        // Delete agent
        async function deleteAgent() {
            if (!confirm('Are you sure you want to delete this agent? This action cannot be undone.')) {
                return;
            }

            const agentId = document.getElementById('agentId').value;
            if (!agentId) return;

            try {
                const response = await fetch(`/admin/agent-configuration/${agentId}/delete`, {
                    method: 'DELETE'
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    closeModal();
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error deleting agent:', error);
                alert('Failed to delete agent');
            }
        }

        // Test agent
        let testAgentId = null;

        function testAgent(agentId) {
            testAgentId = agentId;
            document.getElementById('testInput').value = '';
            document.getElementById('testResults').style.display = 'none';
            document.getElementById('testModal').style.display = 'block';
        }

        function closeTestModal() {
            document.getElementById('testModal').style.display = 'none';
        }

        async function runTest() {
            const input = document.getElementById('testInput').value;
            if (!input.trim()) {
                alert('Please enter test input');
                return;
            }

            const resultsDiv = document.getElementById('testResults');
            const resultsContent = document.getElementById('testResultsContent');

            resultsContent.innerHTML = '<div class="text-center"><i class="fas fa-spinner fa-spin"></i> Running test...</div>';
            resultsDiv.style.display = 'block';

            try {
                const response = await fetch(`/admin/agent-configuration/${testAgentId}/test`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ input: input })
                });

                const result = await response.json();
                resultsContent.innerHTML = '<pre>' + JSON.stringify(result, null, 2) + '</pre>';
            } catch (error) {
                console.error('Error testing agent:', error);
                resultsContent.innerHTML = '<div class="text-red-500">Error: ' + error.message + '</div>';
            }
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            const agentModal = document.getElementById('agentModal');
            const testModal = document.getElementById('testModal');

            if (event.target === agentModal) {
                closeModal();
            }
            if (event.target === testModal) {
                closeTestModal();
            }
        }
    </script>
{% endblock %}
