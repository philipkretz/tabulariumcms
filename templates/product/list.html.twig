{% extends 'base.html.twig' %}

{% block title %}{{ 'products.title'|trans }} - {{ parent() }}{% endblock %}

{% block meta_description %}{{ 'products.meta_description'|trans }}{% endblock %}

{% block body %}
<!-- Include Navigation -->
{% include 'components/navigation.html.twig' %}

<!-- Page Header -->
<div class="bg-gradient-to-br from-amber-50 via-amber-100 to-amber-200 py-16">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-3 bg-gradient-to-r from-amber-800 to-amber-950 bg-clip-text text-transparent">{{ 'products.title'|trans }}</h1>
        <p class="text-lg text-amber-900">{{ 'products.subtitle'|trans }}</p>
    </div>
</div>

<!-- Filter Bar -->
<div class="bg-white shadow-md sticky top-0 z-10" id="filter-bar">
    <div class="container mx-auto px-4 py-4">
        <div class="flex flex-wrap gap-4 items-end">
            <!-- Sort Dropdown -->
            <div class="flex-shrink-0">
                <label class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
                <select id="sort-select" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
                    <option value="newest">Newest First</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                    <option value="name_asc">Name: A-Z</option>
                </select>
            </div>

            <!-- Price Range -->
            <div class="flex gap-2 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Min Price</label>
                    <input type="number" id="price-min"
                           class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent w-28 text-sm"
                           placeholder="0" min="0" step="0.01">
                </div>
                <span class="pb-2 text-gray-500">-</span>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Max Price</label>
                    <input type="number" id="price-max"
                           class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent w-28 text-sm"
                           placeholder="999" min="0" step="0.01">
                </div>
            </div>

            <!-- Categories Dropdown -->
            <div class="flex-grow">
                <label class="block text-sm font-medium text-gray-700 mb-1">Categories</label>
                <div class="relative" id="category-filter">
                    <button type="button" id="category-dropdown-btn"
                            class="w-full bg-white border border-gray-300 rounded-lg px-4 py-2 text-left flex items-center justify-between text-sm hover:bg-gray-50">
                        <span id="category-btn-text">All Categories</span>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    </button>
                    <div id="category-dropdown-menu"
                         class="hidden absolute mt-1 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto z-20">
                        <!-- Populated dynamically via JS -->
                    </div>
                </div>
            </div>

            <!-- Product Type Dropdown -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Product Type</label>
                <select id="type-select" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
                    <option value="">All Types</option>
                    <!-- Populated dynamically via JS -->
                </select>
            </div>

            <!-- In Stock Checkbox -->
            <div class="flex items-center pb-2">
                <input type="checkbox" id="in-stock-checkbox"
                       class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                <label for="in-stock-checkbox" class="ml-2 text-sm font-medium text-gray-700">
                    In Stock Only
                </label>
            </div>

            <!-- Clear Filters Button -->
            <div class="flex-shrink-0 pb-2">
                <button id="clear-filters-btn"
                        class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm font-medium">
                    Clear All
                </button>
            </div>
        </div>

        <!-- Active Filter Badges -->
        <div id="active-filters" class="flex flex-wrap gap-2 mt-3" style="display: none;">
            <!-- Populated dynamically via JS -->
        </div>
    </div>
</div>

<!-- Products Grid -->
<div class="container mx-auto px-4 py-12">
    <div class="mb-6 flex items-center justify-between">
        <p class="text-gray-600" id="product-count">
            Showing <span id="product-count-current">{{ products|length }}</span> of
            <span id="product-count-total">{{ products|length }}</span> products
        </p>
    </div>

    <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for product in products %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-amber-100 product-card">
            <!-- Product Image with Lazy Loading -->
            <div class="bg-gray-100 h-56 flex items-center justify-center">
                {% if product.mainImage %}
                <img data-src="/uploads/media/{{ product.mainImage.filename }}"
                     alt="{{ product.mainImage.alt ?? product.name }}"
                     class="w-full h-full object-cover lazy-load"
                     src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 400 300'%3E%3Crect fill='%23f3f4f6' width='400' height='300'/%3E%3Ctext x='50%25' y='50%25' dominant-baseline='middle' text-anchor='middle' font-family='sans-serif' font-size='24' fill='%239ca3af'%3ELoading...%3C/text%3E%3C/svg%3E">
                {% else %}
                <span class="text-6xl">ðŸ“¦</span>
                {% endif %}
            </div>

            <!-- Product Info -->
            <div class="p-5">
                <h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2 min-h-[3.5rem]">{{ product.name }}</h3>

                {% if product.shortDescription %}
                <p class="text-gray-600 text-sm mb-3 line-clamp-2">{{ product.shortDescription }}</p>
                {% endif %}

                <div class="flex items-center justify-between mb-4">
                    <div>{{ product.grossPrice|price_with_tax(product.taxRate|default(19), (app.request.locale is iterable ? app.request.locale|first : app.request.locale)|default('en'), false)|raw }}</div>

                    <!-- Stock Status -->
                    {% if product.ignoreStock or product.stock > 0 %}
                    <span class="text-xs text-green-600 font-semibold flex items-center gap-1">
                        <span class="w-2 h-2 bg-green-600 rounded-full"></span>
                        {{ 'products.in_stock'|trans }}
                    </span>
                    {% else %}
                    <span class="text-xs text-red-600 font-semibold flex items-center gap-1">
                        <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                        {{ 'products.out_of_stock'|trans }}
                    </span>
                    {% endif %}
                </div>

                <a href="{{ path('app_product_detail', {slug: product.slug}) }}"
                   class="block w-full bg-gradient-to-r from-blue-600 to-blue-800 text-white text-center py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-blue-900 transition shadow-md">
                    {{ 'products.view_details'|trans }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Loading Indicator -->
    <div id="loading-indicator" class="text-center py-8" style="display: none;">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-amber-600"></div>
        <p class="mt-4 text-gray-600">Loading more products...</p>
    </div>

    <!-- No More Products Message -->
    <div id="no-more-products" class="text-center py-8" style="display: none;">
        <p class="text-gray-600 font-semibold">âœ“ All products loaded</p>
    </div>
</div>

<script src="/js/product-filters.js"></script>
<script src="/js/products-infinite-scroll.js"></script>

<!-- Include Footer -->
{% include 'components/footer.html.twig' %}

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.lazy-load {
    filter: blur(5px);
    transition: filter 0.3s;
}

.lazy-loaded {
    filter: blur(0);
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.product-card {
    animation: fadeIn 0.5s ease-out;
}

/* Mobile responsive filters */
@media (max-width: 768px) {
    #filter-bar .flex {
        flex-direction: column;
        gap: 1rem;
    }

    #filter-bar .flex > div {
        width: 100%;
    }

    #filter-bar .flex-grow {
        flex-grow: 0;
    }

    #filter-bar .flex.gap-2 {
        flex-direction: row;
        flex-wrap: wrap;
    }

    #filter-bar input[type="number"] {
        width: 100px;
    }
}
</style>
{% endblock %}
