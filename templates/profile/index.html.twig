{% extends 'base.html.twig' %}

{% block title %}My Account - {{ parent() }}{% endblock %}

{% block body %}
<!-- Include Navigation -->
{% include 'components/navigation.html.twig' %}

<!-- Cookie Banner -->
{% include 'components/cookie_banner.html.twig' %}

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {% include 'profile/_navigation.html.twig' %}

        {% if not app.user.isVerified %}
            <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-yellow-600 text-xl"></i>
                    </div>
                    <div class="ml-3 flex-1">
                        <h3 class="text-sm font-medium text-yellow-800">
                            Email Verification Required
                        </h3>
                        <p class="mt-1 text-sm text-yellow-700">
                            Please verify your email address to access all features.
                        </p>
                        <div class="mt-3">
                            <a href="{{ path('app_profile_settings') }}"
                               class="text-sm font-medium text-yellow-800 hover:text-yellow-900 underline">
                                Verify Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2">
                <!-- Welcome Section -->
                <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg shadow-lg p-8 mb-6 text-white">
                    <div class="flex items-center">
                        {% include 'profile/_avatar.html.twig' with {'user': app.user, 'size': 'lg'} %}
                        <div class="ml-6">
                            <h1 class="text-3xl font-bold">
                                Welcome back,
                                {% if app.user.firstName %}
                                    {{ app.user.firstName }}
                                {% else %}
                                    {{ app.user.username }}
                                {% endif %}!
                            </h1>
                            <p class="mt-1 text-yellow-100">
                                Here's what's happening with your account today
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
                                <i class="fas fa-shopping-bag text-blue-600 text-2xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-gray-600">Total Orders</p>
                                <p class="text-2xl font-bold text-gray-900">{{ totalOrders }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
                                <i class="fas fa-map-marker-alt text-green-600 text-2xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-gray-600">Saved Addresses</p>
                                <p class="text-2xl font-bold text-gray-900">{{ addressCount }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-purple-100 rounded-lg p-3">
                                <i class="fas fa-calendar-alt text-purple-600 text-2xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-gray-600">Member For</p>
                                <p class="text-2xl font-bold text-gray-900">{{ accountAge }} days</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold text-gray-900">Recent Orders</h2>
                        {% if totalOrders > 0 %}
                            <a href="{{ path('app_profile_orders') }}"
                               class="text-sm font-medium text-yellow-600 hover:text-yellow-700">
                                View All <i class="fas fa-arrow-right ml-1"></i>
                            </a>
                        {% endif %}
                    </div>

                    {% if recentOrders is empty %}
                        <div class="text-center py-12">
                            <i class="fas fa-shopping-bag text-gray-300 text-5xl mb-4"></i>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">No Orders Yet</h3>
                            <p class="text-gray-600 mb-6">Start shopping to see your orders here</p>
                            <a href="{{ path('app_products') }}"
                               class="inline-block px-6 py-3 bg-gradient-to-r from-yellow-600 to-yellow-500 text-white font-semibold rounded-lg hover:from-yellow-700 hover:to-yellow-600 transition">
                                Browse Products
                            </a>
                        </div>
                    {% else %}
                        <div class="space-y-3">
                            {% for order in recentOrders %}
                                <div class="border rounded-lg p-4 hover:shadow-md transition">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-3">
                                                <span class="font-mono font-semibold text-yellow-600">
                                                    {{ order.orderNumber }}
                                                </span>
                                                {% set statusColors = {
                                                    'pending': 'bg-yellow-100 text-yellow-800',
                                                    'payment_received': 'bg-green-100 text-green-800',
                                                    'processing': 'bg-blue-100 text-blue-800',
                                                    'shipped': 'bg-purple-100 text-purple-800',
                                                    'delivered': 'bg-green-100 text-green-800',
                                                    'cancelled': 'bg-red-100 text-red-800',
                                                    'failed': 'bg-red-100 text-red-800'
                                                } %}
                                                <span class="px-3 py-1 rounded-full text-xs font-semibold {{ statusColors[order.status] ?? 'bg-gray-100 text-gray-800' }}">
                                                    {{ order.status|upper }}
                                                </span>
                                            </div>
                                            <p class="text-sm text-gray-600 mt-1">
                                                {{ order.createdAt|date('F d, Y') }} â€¢ {{ order.items|length }} item(s)
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-lg font-bold text-gray-900">
                                                {{ order.total|price(app.request.locale) }}
                                            </p>
                                            <a href="{{ path('app_profile_order_detail', {'id': order.id}) }}"
                                               class="text-sm text-yellow-600 hover:text-yellow-700 font-medium">
                                                View Details <i class="fas fa-chevron-right ml-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Quick Actions -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
                    <a href="{{ path('app_profile_edit') }}"
                       class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition group">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-gray-100 rounded-lg p-3 group-hover:bg-yellow-100 transition">
                                <i class="fas fa-user-edit text-gray-600 group-hover:text-yellow-600 text-2xl transition"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="font-semibold text-gray-900">Edit Profile</h3>
                                <p class="text-sm text-gray-600">Update your personal information</p>
                            </div>
                        </div>
                    </a>

                    <a href="{{ path('app_profile_addresses') }}"
                       class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition group">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-gray-100 rounded-lg p-3 group-hover:bg-yellow-100 transition">
                                <i class="fas fa-map-marker-alt text-gray-600 group-hover:text-yellow-600 text-2xl transition"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="font-semibold text-gray-900">Manage Addresses</h3>
                                <p class="text-sm text-gray-600">Add or update your addresses</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                {% include 'profile/_sidebar.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
