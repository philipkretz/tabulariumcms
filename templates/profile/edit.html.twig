    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/trix@2.1.0/dist/trix.umd.min.js"></script>
    <script>
        // Add custom link function
        function addCustomLink() {
            const container = document.getElementById('custom-links-container');
            const linkItem = document.createElement('div');
            linkItem.className = 'custom-link-item flex gap-2';
            linkItem.innerHTML = `
                <input type="text"
                       name="social[custom_label][]"
                       placeholder="{{ 'profile.link_label'|trans }}"
                       class="w-1/3 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500">
                <input type="url"
                       name="social[custom_url][]"
                       placeholder="https://..."
                       class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500">
                <button type="button" onclick="this.parentElement.remove()" class="px-3 py-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(linkItem);
        }

        // Character counter for tagline
        const taglineInput = document.querySelector('[name="tagline"]');
        if (taglineInput) {
            taglineInput.addEventListener('input', function() {
                const remaining = 100 - this.value.length;
                const helpText = this.nextElementSibling;
                if (helpText) {
                    helpText.textContent = remaining + ' {{ 'profile.characters_remaining'|trans }}';
                    if (remaining < 20) {
                        helpText.classList.add('text-yellow-600');
                    } else {
                        helpText.classList.remove('text-yellow-600');
                    }
                }
            });
        }
    </script>
{% endblock %}
