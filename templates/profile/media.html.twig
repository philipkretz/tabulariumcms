{% extends 'base.html.twig' %}

{% block title %}{{ targetUser.fullName }} - Media Gallery{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    {# Header Section #}
    <div class="bg-white border-b">
        <div class="max-w-6xl mx-auto px-4 py-6">
            <div class="flex items-center gap-4">
                {# Back to Profile #}
                <a href="{{ path('app_public_profile', {slug: profile.profileSlug ?? targetUser.username}) }}" class="text-gray-600 hover:text-gray-900">
                    <i class="fas fa-arrow-left text-xl"></i>
                </a>

                {# Profile Info #}
                <div class="flex items-center gap-4 flex-grow">
                    {% if profile.avatar %}
                        <img src="{{ asset('uploads/profiles/' ~ profile.avatar) }}" alt="{{ targetUser.fullName }}" class="w-16 h-16 rounded-full">
                    {% else %}
                        {% set initials = targetUser.firstName|slice(0, 1)|upper ~ targetUser.lastName|slice(0, 1)|upper %}
                        <div class="w-16 h-16 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 flex items-center justify-center text-white text-xl font-bold">
                            {{ initials }}
                        </div>
                    {% endif %}

                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">{{ targetUser.fullName }}'s Media Gallery</h1>
                        <p class="text-gray-600">{{ media|length }} items</p>
                    </div>
                </div>

                {# Upload Button (Own Profile) #}
                {% if isOwnProfile %}
                    <a href="{{ path('app_profile_media_upload') }}" class="bg-yellow-500 text-white px-6 py-2 rounded-lg hover:bg-yellow-600 transition">
                        <i class="fas fa-upload mr-2"></i>Upload
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    {# Main Content #}
    <div class="max-w-6xl mx-auto px-4 py-8">
        {% if media|length > 0 %}
            {# Media Grid - Masonry Layout #}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for item in media %}
                    <div class="bg-white rounded-lg shadow hover:shadow-lg transition overflow-hidden group cursor-pointer" data-media-id="{{ item.id }}">
                        {# Media Item #}
                        <div class="relative aspect-square">
                            {% if item.type == 'image' %}
                                <img src="{{ asset('uploads/user-media/' ~ item.user.id ~ '/' ~ item.filename) }}"
                                     alt="{{ item.originalFilename }}"
                                     class="w-full h-full object-cover"
                                     onclick="openLightbox({{ item.id }})">
                            {% elseif item.type == 'video' %}
                                <video src="{{ asset('uploads/user-media/' ~ item.user.id ~ '/' ~ item.filename) }}"
                                       class="w-full h-full object-cover"
                                       onclick="openLightbox({{ item.id }})"></video>
                                <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-30">
                                    <i class="fas fa-play-circle text-white text-5xl"></i>
                                </div>
                            {% endif %}

                            {# Overlay on Hover #}
                            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition flex items-center justify-center opacity-0 group-hover:opacity-100">
                                <div class="text-white text-center">
                                    <i class="fas fa-search-plus text-3xl mb-2"></i>
                                    <div class="text-sm">
                                        <i class="fas fa-eye mr-1"></i>{{ item.views }} views
                                    </div>
                                </div>
                            </div>

                            {# Privacy Badge #}
                            {% if not item.isPublic %}
                                <div class="absolute top-2 right-2 bg-gray-900 bg-opacity-75 text-white px-2 py-1 rounded text-xs">
                                    <i class="fas fa-lock mr-1"></i>Private
                                </div>
                            {% endif %}
                        </div>

                        {# Media Info #}
                        {% if item.description %}
                            <div class="p-3">
                                <p class="text-sm text-gray-700 line-clamp-2">{{ item.description }}</p>
                            </div>
                        {% endif %}

                        {# Actions (Own Media Only) #}
                        {% if isOwnProfile %}
                            <div class="border-t p-3 flex gap-2">
                                <a href="{{ path('app_profile_media_edit', {id: item.id}) }}" class="flex-1 text-center text-blue-600 hover:bg-blue-50 py-1 rounded transition text-sm">
                                    <i class="fas fa-edit mr-1"></i>Edit
                                </a>
                                <button onclick="confirmDelete({{ item.id }})" class="flex-1 text-center text-red-600 hover:bg-red-50 py-1 rounded transition text-sm">
                                    <i class="fas fa-trash mr-1"></i>Delete
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {# Empty State #}
            <div class="bg-white rounded-xl shadow p-12 text-center">
                <i class="fas fa-images text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-xl font-bold text-gray-900 mb-2">No Media Yet</h3>
                <p class="text-gray-600">
                    {% if isOwnProfile %}
                        Start building your gallery by uploading photos and videos!
                    {% else %}
                        {{ targetUser.firstName }} hasn't uploaded any media yet.
                    {% endif %}
                </p>
                {% if isOwnProfile %}
                    <a href="{{ path('app_profile_media_upload') }}" class="inline-block mt-4 bg-yellow-500 text-white px-6 py-2 rounded-lg hover:bg-yellow-600 transition">
                        <i class="fas fa-upload mr-2"></i>Upload Media
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

{# Lightbox Modal #}
<div id="lightboxModal" class="hidden fixed inset-0 bg-black bg-opacity-90 z-50 flex items-center justify-center p-4">
    <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300 z-10">
        <i class="fas fa-times"></i>
    </button>

    <button onclick="previousMedia()" class="absolute left-4 text-white text-4xl hover:text-gray-300 z-10">
        <i class="fas fa-chevron-left"></i>
    </button>

    <button onclick="nextMedia()" class="absolute right-4 text-white text-4xl hover:text-gray-300 z-10">
        <i class="fas fa-chevron-right"></i>
    </button>

    <div id="lightboxContent" class="max-w-5xl max-h-full w-full h-full flex items-center justify-center">
        {# Content will be injected here #}
    </div>

    <div id="lightboxInfo" class="absolute bottom-4 left-4 right-4 text-white text-center">
        {# Media info will be injected here #}
    </div>
</div>

{# Delete Confirmation Modal #}
<div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-lg p-6 max-w-md w-full">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Delete Media</h3>
        <p class="text-gray-600 mb-6">Are you sure you want to delete this media? This action cannot be undone.</p>
        <div class="flex gap-3">
            <button onclick="closeDeleteModal()" class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition">
                Cancel
            </button>
            <form id="deleteForm" method="POST" class="flex-1">
                <input type="hidden" name="_token" value="{{ csrf_token('media_delete') }}">
                <button type="submit" class="w-full bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
const mediaItems = [
    {% for item in media %}
    {
        id: {{ item.id }},
        type: '{{ item.type }}',
        url: '{{ asset('uploads/user-media/' ~ item.user.id ~ '/' ~ item.filename) }}',
        filename: '{{ item.originalFilename }}',
        description: '{{ item.description|default('')|e('js') }}',
        views: {{ item.views }}
    },
    {% endfor %}
];

let currentMediaIndex = 0;

function openLightbox(mediaId) {
    currentMediaIndex = mediaItems.findIndex(item => item.id === mediaId);
    if (currentMediaIndex === -1) return;

    showMedia(currentMediaIndex);
    document.getElementById('lightboxModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeLightbox() {
    document.getElementById('lightboxModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

function showMedia(index) {
    const media = mediaItems[index];
    const content = document.getElementById('lightboxContent');
    const info = document.getElementById('lightboxInfo');

    if (media.type === 'image') {
        content.innerHTML = `<img src="${media.url}" alt="${media.filename}" class="max-w-full max-h-full object-contain">`;
    } else if (media.type === 'video') {
        content.innerHTML = `<video src="${media.url}" controls autoplay class="max-w-full max-h-full">Your browser does not support the video tag.</video>`;
    }

    info.innerHTML = `
        <p class="font-semibold">${media.filename}</p>
        ${media.description ? `<p class="text-sm mt-1">${media.description}</p>` : ''}
        <p class="text-sm mt-1"><i class="fas fa-eye mr-1"></i>${media.views} views</p>
    `;
}

function previousMedia() {
    currentMediaIndex = (currentMediaIndex - 1 + mediaItems.length) % mediaItems.length;
    showMedia(currentMediaIndex);
}

function nextMedia() {
    currentMediaIndex = (currentMediaIndex + 1) % mediaItems.length;
    showMedia(currentMediaIndex);
}

function confirmDelete(mediaId) {
    const deleteForm = document.getElementById('deleteForm');
    deleteForm.action = '{{ path('app_profile_media_delete', {id: 0}) }}'.replace('/0', '/' + mediaId);
    document.getElementById('deleteModal').classList.remove('hidden');
}

function closeDeleteModal() {
    document.getElementById('deleteModal').classList.add('hidden');
}

// Keyboard navigation
document.addEventListener('keydown', function(e) {
    const lightbox = document.getElementById('lightboxModal');
    if (!lightbox.classList.contains('hidden')) {
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowLeft') previousMedia();
        if (e.key === 'ArrowRight') nextMedia();
    }
});

// Close lightbox on background click
document.getElementById('lightboxModal').addEventListener('click', function(e) {
    if (e.target === this) closeLightbox();
});
</script>
{% endblock %}
