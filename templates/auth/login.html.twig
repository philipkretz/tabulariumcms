{% extends 'base.html.twig' %}

{% block title %}Sign In - {{ parent() }}{% endblock %}

{% block meta_tags %}
<meta name="description" content="Sign in to your account to access personalized features and manage your profile.">
<meta name="robots" content="noindex, nofollow">
<link rel="canonical" href="{{ url('app_login') }}">

{# Open Graph #}
<meta property="og:title" content="Sign In">
<meta property="og:description" content="Access your account">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ url('app_login') }}">

{# Twitter Card #}
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="Sign In">
<meta name="twitter:description" content="Access your account">

{# Schema.org Structured Data #}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "User Login",
    "description": "Sign in to your account",
    "url": "{{ url('app_login') }}",
    "potentialAction": {
        "@type": "LoginAction",
        "target": {
            "@type": "EntryPoint",
            "urlTemplate": "{{ url('app_login') }}"
        }
    }
}
</script>
{% endblock %}

{% block body %}
<section class="user-login py-16 bg-gradient-to-br from-indigo-50 via-white to-blue-50 min-h-screen flex items-center"
         itemscope itemtype="https://schema.org/WebPage">
    <div class="container mx-auto px-4 max-w-md">
        <article class="bg-white rounded-2xl shadow-2xl p-8" itemscope itemtype="https://schema.org/LoginAction">
            <header class="text-center mb-8">
                <h1 class="text-4xl font-bold text-gray-800 mb-2">Welcome Back</h1>
                <p class="text-gray-600">Sign in to your account</p>
            </header>

            {% if error %}
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded" role="alert" aria-live="polite">
                    <p class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded" role="alert" aria-live="polite">
                    <p class="font-medium">{{ message }}</p>
                </div>
            {% endfor %}

            <form action="{{ path('app_login') }}" method="POST" class="space-y-6" aria-label="User login form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                        Email Address <span class="text-red-500" aria-label="required">*</span>
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="_username"
                        value="{{ last_username }}"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                        placeholder="your.email@example.com"
                        aria-required="true"
                        autocomplete="email"
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                        Password <span class="text-red-500" aria-label="required">*</span>
                    </label>
                    <input
                        type="password"
                        id="password"
                        name="_password"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                        placeholder="Enter your password"
                        aria-required="true"
                        autocomplete="current-password"
                    >
                </div>

                <div class="flex items-center">
                    <input
                        type="checkbox"
                        id="remember_me"
                        name="_remember_me"
                        class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    >
                    <label for="remember_me" class="ml-2 text-sm text-gray-700">
                        Remember me
                    </label>
                </div>

                <button
                    type="submit"
                    class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-6 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-700 focus:ring-4 focus:ring-blue-300 transition duration-300 transform hover:scale-105"
                    aria-label="Sign in"
                >
                    <i class="fa fa-sign-in-alt mr-2"></i> Sign In
                </button>
            </form>

            <footer class="mt-6 text-center">
                <div class="text-sm text-gray-600 mb-3">
                    Don't have an account?
                    <a href="{{ path('app_register') }}" class="text-blue-600 hover:text-blue-800 font-medium hover:underline">
                        Create one here
                    </a>
                </div>
                <div class="text-sm">
                    <a href="#" class="text-gray-500 hover:text-gray-700 hover:underline">
                        Forgot your password?
                    </a>
                </div>
            </footer>
        </article>
    </div>
</section>
{% endblock %}
