{% extends 'frontend/base.html.twig' %}

{% block title %}{{ 'Two-Factor Authentication'|trans }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-yellow-600 via-yellow-500 to-yellow-600 rounded-full mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900">
                {{ 'Two-Factor Authentication'|trans }}
            </h1>
            <p class="mt-2 text-gray-600">
                {{ 'Enter the 6-digit code from your authenticator app'|trans }}
            </p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-8">
            {% if error is defined and error %}
                <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ checkPath }}" method="post">
                <div class="space-y-4">
                    <div>
                        <label for="_auth_code" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ 'Authentication Code'|trans }}
                        </label>
                        <input 
                            type="text" 
                            id="_auth_code" 
                            name="_auth_code" 
                            required 
                            autofocus
                            maxlength="6" 
                            pattern="[0-9]{6}"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-center text-2xl tracking-widest"
                            placeholder="000000"
                            autocomplete="off"
                        >
                        <p class="mt-2 text-sm text-gray-500">
                            {{ 'Open your authenticator app and enter the current code'|trans }}
                        </p>
                    </div>

                    {% if displayTrustedOption %}
                        <div class="flex items-center">
                            <input 
                                type="checkbox" 
                                id="_trusted" 
                                name="_trusted"
                                class="h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 rounded"
                            >
                            <label for="_trusted" class="ml-2 block text-sm text-gray-700">
                                {{ 'Trust this device for 30 days'|trans }}
                            </label>
                        </div>
                    {% endif %}
                    
                    <button 
                        type="submit" 
                        class="w-full px-6 py-3 bg-gradient-to-r from-yellow-600 via-yellow-500 to-yellow-600 hover:from-yellow-700 hover:via-yellow-600 hover:to-yellow-700 text-white font-semibold rounded-lg transition duration-300 shadow-lg"
                    >
                        {{ 'Verify'|trans }}
                    </button>
                </div>
            </form>

            <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-sm text-gray-600 text-center">
                    {{ 'Having trouble? Contact support for help.'|trans }}
                </p>
            </div>
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_logout') }}" class="text-gray-600 hover:text-gray-800 text-sm">
                {{ 'Cancel and Logout'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
