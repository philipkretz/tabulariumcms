{% extends 'frontend/base.html.twig' %}

{% block title %}{{ 'Two-Factor Authentication'|trans }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-yellow-600 via-yellow-500 to-yellow-600 text-transparent bg-clip-text">
                {{ 'Two-Factor Authentication'|trans }}
            </h1>
            <p class="mt-4 text-lg text-gray-600">
                {{ 'Secure your account with an additional layer of protection'|trans }}
            </p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white rounded-2xl shadow-xl p-8">
            {% if user.isTwoFactorEnabled %}
                <div class="text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">
                        {{ '2FA is Active'|trans }}
                    </h2>
                    <p class="text-gray-600 mb-6">
                        {{ 'Your account is protected with two-factor authentication'|trans }}
                    </p>
                    
                    <form method="post" action="{{ path('app_2fa_disable') }}" onsubmit="return confirm('{{ 'Are you sure you want to disable 2FA?'|trans }}')">
                        <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition duration-300">
                            {{ 'Disable 2FA'|trans }}
                        </button>
                    </form>
                </div>
            {% else %}
                <div class="space-y-6">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">
                            {{ 'Enable Two-Factor Authentication'|trans }}
                        </h2>
                        <p class="text-gray-600 mb-6">
                            {{ 'Scan the QR code below with your authenticator app (Google Authenticator, Microsoft Authenticator, or any TOTP app), then enter the 6-digit code to verify.'|trans }}
                        </p>
                    </div>

                    <div class="flex justify-center">
                        <div class="bg-white p-4 rounded-lg border-2 border-gray-200">
                            <img src="{{ path('app_2fa_qr_code') }}" alt="QR Code" class="w-64 h-64">
                        </div>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <h3 class="font-semibold text-blue-900 mb-2">{{ 'Setup Instructions'|trans }}</h3>
                        <ol class="list-decimal list-inside space-y-2 text-blue-800 text-sm">
                            <li>{{ 'Download an authenticator app (Google Authenticator, Microsoft Authenticator, Authy, etc.)'|trans }}</li>
                            <li>{{ 'Open the app and tap the add button (+)'|trans }}</li>
                            <li>{{ 'Scan the QR code shown above'|trans }}</li>
                            <li>{{ 'Enter the 6-digit code from the app below'|trans }}</li>
                        </ol>
                    </div>

                    <form method="post" action="{{ path('app_2fa_enable') }}" class="space-y-4">
                        <div>
                            <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
                                {{ 'Verification Code'|trans }}
                            </label>
                            <input 
                                type="text" 
                                id="code" 
                                name="code" 
                                required 
                                maxlength="6" 
                                pattern="[0-9]{6}"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-center text-2xl tracking-widest"
                                placeholder="000000"
                                autocomplete="off"
                            >
                        </div>
                        
                        <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-yellow-600 via-yellow-500 to-yellow-600 hover:from-yellow-700 hover:via-yellow-600 hover:to-yellow-700 text-white font-semibold rounded-lg transition duration-300 shadow-lg">
                            {{ 'Enable 2FA'|trans }}
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_profile') }}" class="text-yellow-600 hover:text-yellow-700 font-medium">
                {{ 'Back to Profile'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
