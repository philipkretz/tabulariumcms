<!-- Step 3: Run Migrations -->
<div class="accordion-section bg-white rounded-2xl shadow-lg border-2 border-gray-200 mb-6" data-step="3">
    <div class="accordion-header bg-gray-200 text-gray-700 p-4 rounded-t-xl cursor-pointer flex justify-between items-center">
        <div class="flex items-center">
            <span class="text-2xl mr-3">3</span>
            <h2 class="text-xl font-bold">{{ 'setup.steps.migrations'|trans }}</h2>
        </div>
        <i class="fas fa-chevron-down transition-transform"></i>
    </div>
    <div class="accordion-body p-6" style="display: none;">
        <div class="mb-6">
            <h3 class="text-lg font-bold mb-2">{{ 'setup.migrations_title'|trans }}</h3>
            <p class="text-gray-600">{{ 'setup.migrations_description'|trans }}</p>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-start">
                <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
                <p class="text-blue-800 text-sm">{{ 'setup.migrations_info'|trans }}</p>
            </div>
        </div>

        <!-- Progress Bar -->
        <div class="mb-4">
            <div class="flex justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">{{ 'setup.migration_progress'|trans }}</span>
                <span id="migration-progress-text" class="text-sm font-medium text-gray-700">0%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                <div id="migration-progress" class="bg-gradient-to-r from-yellow-500 to-yellow-600 h-4 rounded-full transition-all duration-500" style="width: 0%"></div>
            </div>
        </div>

        <!-- Migration Log -->
        <div id="migration-log" class="migration-log mb-6" style="display: none;"></div>

        <div class="flex gap-4">
            <button onclick="openStep(2)"
                    class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-3 px-6 rounded-lg transition">
                <i class="fas fa-arrow-left mr-2"></i> {{ 'setup.back'|trans }}
            </button>
            <button id="run-migrations-btn" onclick="runMigrations()"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition">
                <i class="fas fa-database mr-2"></i> {{ 'setup.run_migrations'|trans }}
            </button>
            <button id="step3-next-btn" onclick="markStepCompleted(3); openStep(4);" disabled
                    class="flex-1 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold py-3 px-6 rounded-lg transition opacity-50 cursor-not-allowed">
                {{ 'setup.continue'|trans }} <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </div>
</div>
