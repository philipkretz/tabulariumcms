<!-- Step 2: Database Configuration -->
<div class="accordion-section bg-white rounded-2xl shadow-lg border-2 border-gray-200 mb-6" data-step="2">
    <div class="accordion-header bg-gray-200 text-gray-700 p-4 rounded-t-xl cursor-pointer flex justify-between items-center">
        <div class="flex items-center">
            <span class="text-2xl mr-3">2</span>
            <h2 class="text-xl font-bold">{{ 'setup.steps.database'|trans }}</h2>
        </div>
        <i class="fas fa-chevron-down transition-transform"></i>
    </div>
    <div class="accordion-body p-6" style="display: none;">
        <div class="mb-6">
            <h3 class="text-lg font-bold mb-2">{{ 'setup.database_config_title'|trans }}</h3>
            <p class="text-gray-600">{{ 'setup.database_config_description'|trans }}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.db_host'|trans }}</label>
                <input type="text" id="db-host" value="localhost"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.db_port'|trans }}</label>
                <input type="number" id="db-port" value="3306"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.db_name'|trans }} *</label>
                <input type="text" id="db-name" placeholder="tabularium_cms" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.db_user'|trans }} *</label>
                <input type="text" id="db-user" placeholder="root" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
            </div>
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.db_password'|trans }}</label>
                <input type="password" id="db-password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
            </div>
        </div>

        <div id="database-test-result" class="mb-4"></div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <div class="flex items-start">
                <i class="fas fa-exclamation-triangle text-yellow-600 mt-1 mr-3"></i>
                <p class="text-yellow-800 text-sm">{{ 'setup.database_warning'|trans }}</p>
            </div>
        </div>

        <div class="flex gap-4">
            <button onclick="openStep(1)"
                    class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-3 px-6 rounded-lg transition">
                <i class="fas fa-arrow-left mr-2"></i> {{ 'setup.back'|trans }}
            </button>
            <button id="test-database-btn" onclick="testDatabase()"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition">
                <i class="fas fa-plug mr-2"></i> {{ 'setup.test_connection'|trans }}
            </button>
            <button id="step2-next-btn" onclick="saveDatabase();" disabled
                    class="flex-1 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold py-3 px-6 rounded-lg transition opacity-50 cursor-not-allowed">
                {{ 'setup.continue'|trans }} <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </div>
</div>
