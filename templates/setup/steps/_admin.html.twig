<!-- Step 4: Create Admin User -->
<div class="accordion-section bg-white rounded-2xl shadow-lg border-2 border-gray-200 mb-6" data-step="4">
    <div class="accordion-header bg-gray-200 text-gray-700 p-4 rounded-t-xl cursor-pointer flex justify-between items-center">
        <div class="flex items-center">
            <span class="text-2xl mr-3">4</span>
            <h2 class="text-xl font-bold">{{ 'setup.steps.admin'|trans }}</h2>
        </div>
        <i class="fas fa-chevron-down transition-transform"></i>
    </div>
    <div class="accordion-body p-6" style="display: none;">
        <div class="mb-6">
            <h3 class="text-lg font-bold mb-2">{{ 'setup.admin_title'|trans }}</h3>
            <p class="text-gray-600">{{ 'setup.admin_description'|trans }}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_firstname'|trans }} *</label>
                <input type="text" id="admin-firstname" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="John">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_lastname'|trans }} *</label>
                <input type="text" id="admin-lastname" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="Doe">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_email'|trans }} *</label>
                <input type="email" id="admin-email" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="admin@example.com">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_username'|trans }} *</label>
                <input type="text" id="admin-username" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="admin">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_password'|trans }} *</label>
                <input type="password" id="admin-password" required minlength="8"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="{{ 'setup.password_placeholder'|trans }}">
                <p class="text-xs text-gray-500 mt-1">{{ 'setup.password_min_chars'|trans }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'setup.admin_password_confirm'|trans }} *</label>
                <input type="password" id="admin-password-confirm" required minlength="8"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                       placeholder="{{ 'setup.password_confirm_placeholder'|trans }}">
            </div>
        </div>

        <div id="admin-create-result" class="mb-4"></div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <div class="flex items-start">
                <i class="fas fa-shield-alt text-yellow-600 mt-1 mr-3"></i>
                <p class="text-yellow-800 text-sm">{{ 'setup.admin_security_note'|trans }}</p>
            </div>
        </div>

        <div class="flex gap-4">
            <button onclick="openStep(3)"
                    class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-3 px-6 rounded-lg transition">
                <i class="fas fa-arrow-left mr-2"></i> {{ 'setup.back'|trans }}
            </button>
            <button id="step4-next-btn" onclick="createAdmin()"
                    class="flex-1 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold py-3 px-6 rounded-lg transition">
                {{ 'setup.create_admin'|trans }} <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </div>
</div>
