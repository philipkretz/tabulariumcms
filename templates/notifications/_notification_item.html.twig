{# Reusable notification item component #}
{# Usage: {% include 'notifications/_notification_item.html.twig' with {'notification': notification} %} #}

{% set relatedUser = notification.relatedUser %}
{% set isUnread = not notification.isRead %}

<div
    class="p-4 hover:bg-gray-50 transition {{ isUnread ? 'bg-yellow-50' : '' }}"
    data-notification-id="{{ notification.id }}"
>
    <div class="flex items-start space-x-3">
        <!-- Avatar -->
        {% if relatedUser %}
            <a href="{{ path('app_public_profile', {slug: relatedUser.profile.profileSlug ?? relatedUser.username}) }}" class="flex-shrink-0">
                {% if relatedUser.profile and relatedUser.profile.avatar %}
                    <img src="{{ asset(relatedUser.profile.avatar) }}"
                         alt="{{ relatedUser.username }}"
                         class="w-12 h-12 rounded-full object-cover">
                {% else %}
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center">
                        <span class="text-white font-bold text-lg">
                            {{ relatedUser.username|slice(0, 1)|upper }}
                        </span>
                    </div>
                {% endif %}
            </a>
        {% else %}
            <div class="w-12 h-12 bg-gradient-to-br from-gray-400 to-gray-600 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fas fa-bell text-white text-lg"></i>
            </div>
        {% endif %}

        <!-- Notification Content -->
        <div class="flex-1 min-w-0">
            <!-- Icon and Message -->
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-1">
                        <!-- Type Icon -->
                        {% if notification.type == constant('App\\Entity\\Notification::TYPE_FRIEND_REQUEST') %}
                            <i class="fas fa-user-plus text-yellow-600"></i>
                        {% elseif notification.type == constant('App\\Entity\\Notification::TYPE_FRIEND_ACCEPTED') %}
                            <i class="fas fa-user-check text-green-600"></i>
                        {% elseif notification.type == constant('App\\Entity\\Notification::TYPE_MESSAGE_RECEIVED') %}
                            <i class="fas fa-envelope text-blue-600"></i>
                        {% elseif notification.type == constant('App\\Entity\\Notification::TYPE_PROFILE_VIEW') %}
                            <i class="fas fa-eye text-purple-600"></i>
                        {% elseif notification.type == constant('App\\Entity\\Notification::TYPE_MEDIA_COMMENT') %}
                            <i class="fas fa-comment text-indigo-600"></i>
                        {% else %}
                            <i class="fas fa-bell text-gray-600"></i>
                        {% endif %}

                        <!-- Unread Indicator -->
                        {% if isUnread %}
                            <span class="inline-block w-2 h-2 bg-yellow-600 rounded-full"></span>
                        {% endif %}
                    </div>

                    <!-- Message -->
                    <p class="text-sm text-gray-900 {{ isUnread ? 'font-semibold' : '' }}">
                        {{ notification.message }}
                    </p>

                    <!-- Timestamp -->
                    <p class="text-xs text-gray-500 mt-1">
                        {% set diff = date().diff(notification.createdAt) %}
                        {% if diff.days == 0 %}
                            {% if diff.h == 0 %}
                                {% if diff.i == 0 %}
                                    Just now
                                {% else %}
                                    {{ diff.i }} {{ diff.i == 1 ? 'minute' : 'minutes' }} ago
                                {% endif %}
                            {% else %}
                                {{ diff.h }} {{ diff.h == 1 ? 'hour' : 'hours' }} ago
                            {% endif %}
                        {% elseif diff.days == 1 %}
                            Yesterday
                        {% elseif diff.days < 7 %}
                            {{ diff.days }} days ago
                        {% else %}
                            {{ notification.createdAt|date('M d, Y') }}
                        {% endif %}
                    </p>
                </div>

                <!-- Actions -->
                <div class="flex items-center space-x-2 ml-2">
                    {% if isUnread %}
                        <button
                            onclick="markNotificationRead({{ notification.id }}); this.closest('[data-notification-id]').classList.remove('bg-yellow-50'); this.remove();"
                            class="text-gray-400 hover:text-yellow-600 transition"
                            title="Mark as read"
                        >
                            <i class="fas fa-check text-sm"></i>
                        </button>
                    {% endif %}
                    <button
                        onclick="deleteNotification({{ notification.id }})"
                        class="text-gray-400 hover:text-red-600 transition"
                        title="Delete"
                    >
                        <i class="fas fa-times text-sm"></i>
                    </button>
                </div>
            </div>

            <!-- Action Buttons (for specific notification types) -->
            {% if notification.type == constant('App\\Entity\\Notification::TYPE_FRIEND_REQUEST') %}
                <div class="mt-2 flex space-x-2">
                    <button
                        onclick="acceptFriendRequest({{ notification.relatedEntityId }})"
                        class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white text-xs rounded transition"
                    >
                        Accept
                    </button>
                    <button
                        onclick="rejectFriendRequest({{ notification.relatedEntityId }})"
                        class="px-3 py-1 bg-gray-600 hover:bg-gray-700 text-white text-xs rounded transition"
                    >
                        Reject
                    </button>
                </div>
            {% elseif notification.type == constant('App\\Entity\\Notification::TYPE_MESSAGE_RECEIVED') and relatedUser %}
                <div class="mt-2">
                    <a href="{{ path('app_messages_conversation', {userId: relatedUser.id}) }}"
                       class="inline-block px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded transition">
                        View Message
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
