# This file is an example of .env.local
# Copy this file to .env.local and configure your environment variables

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=changeme_generate_a_random_secret_key_here
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
DATABASE_URL="mysql://root:root@mariadb:3306/tabulariumcms?serverVersion=10.11.2-MariaDB&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> Google reCAPTCHA (for spam protection) ###
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
# Set to true to enable reCAPTCHA on checkout and contact forms
RECAPTCHA_ENABLED=false
###< Google reCAPTCHA ###

###> Payment Gateways ###
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# PayPal
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_SECRET=your_secret_here
PAYPAL_MODE=sandbox
###< Payment Gateways ###

###> Email Configuration ###
MAILER_DSN=smtp://localhost:1025
# For production, use real SMTP:
# MAILER_DSN=smtp://user:pass@smtp.example.com:587
###< Email Configuration ###

###> Security Settings ###
# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
# Lockout duration in minutes
LOGIN_LOCKOUT_DURATION=15

# Rate limiting
CART_RATE_LIMIT=30
SEARCH_RATE_LIMIT=10
CHECKOUT_RATE_LIMIT=5
###< Security Settings ###
